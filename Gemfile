gem 'puma', '~> 3.7'
gem 'rails', '~> 5.1.4'
gem 'rubocop', require: false
gem 'sass-rails', '~> 5.0'
gem 'turbolinks', '~> 5'
gem 'uglifier', '>= 1.3.0'
gem 'chain-sdk', '1.2.0', require: 'chain'


